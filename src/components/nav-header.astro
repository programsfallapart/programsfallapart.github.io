---
import ThemeButton from '@components/theme-button.astro'

const links = [
  { url: '/', title: 'Home' },
  { url: '/tags', title: 'Tags' },
  { url: '/archive', title: 'Archive' },
  { url: '/about', title: 'About' },
]

const isCurrentPage = (url: string) => {
  const pathname = Astro.url.pathname
  if (url === pathname) return true
  if (pathname.includes(url) && url !== '/') return true
  return false
}
---

<header class="sticky top-0 z-10 bg-primary-white bg-opacity-95 text-gray-500 dark:bg-primary-dark dark:bg-opacity-95">
  <nav class="relative h-[90px]">
    <ul class="flex h-full items-center justify-start gap-10">
      {
        links.map((link) => (
            <li class:list={[{ 'text-primary': isCurrentPage(link.url) }]}>
              <a href={link.url}>{link.title}</a>
            </li>
        ))
      }
    </ul>
    <div class="absolute right-0 top-[50%] -translate-y-[50%]">
      <ThemeButton />
    </div>
  </nav>
</header>

